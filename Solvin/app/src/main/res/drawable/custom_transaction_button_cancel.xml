<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed state -->
    <item android:state_pressed="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetLeft="@dimen/default_inset_2m"
            android:insetTop="@dimen/default_inset_2m"
            android:insetRight="@dimen/default_inset_2m"
            android:insetBottom="@dimen/default_inset_2m">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/button_default_corner_radius" />
                <solid android:color="@color/colorCancelDark" />
            </shape>
        </inset>
    </item>

    <!-- normal state -->
    <item>
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetLeft="@dimen/default_inset_2m"
            android:insetTop="@dimen/default_inset_2m"
            android:insetRight="@dimen/default_inset_2m"
            android:insetBottom="@dimen/default_inset_2m">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/button_default_corner_radius" />
                <solid android:color="@color/colorCancel" />
            </shape>
        </inset>
    </item>
</selector>
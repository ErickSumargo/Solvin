<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/custom_background_borderless"
    android:padding="@dimen/default_padding_12m">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/search_suggestion_user_photo"
                android:layout_width="@dimen/circle_image_view_radius"
                android:layout_height="@dimen/circle_image_view_radius" />

            <RelativeLayout
                android:id="@+id/search_suggestion_avatar_layout"
                android:layout_width="@dimen/circle_image_view_radius"
                android:layout_height="@dimen/circle_image_view_radius"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/circle">

                <TextView
                    android:id="@+id/search_suggestion_avatar_initial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font_size_20m"
                    style="@style/SourceSansPro_Regular" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_margin_12m"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_suggestion_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorHeader"
                android:textSize="@dimen/default_font_size_18m"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/SourceSansPro_Regular" />

            <TextView
                android:id="@+id/search_suggestion_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSubHeaderDarker"
                android:textSize="@dimen/default_font_size_16m"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/SourceSansPro_Regular" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_padding_16m"
        android:paddingTop="@dimen/default_padding_16m"
        android:paddingRight="@dimen/default_padding_16m"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganti Password"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_font_size_20m"
            style="@style/SourceSansPro_Regular" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_20m">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_password_actived_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password Aktif"
                app:errorTextAppearance="@style/TextInputErrorTextAppearance"
                app:passwordToggleEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/edit_password_actived_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/password_default_padding"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/default_font_size_18m"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    style="@style/SourceSansPro_Regular" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/edit_profile_toggle_actived_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_visibility"
                android:background="?selectableItemBackgroundBorderless" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_8m">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_password_new_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password Baru"
                app:errorTextAppearance="@style/TextInputErrorTextAppearance"
                app:passwordToggleEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/edit_password_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/password_default_padding"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/default_font_size_18m"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    style="@style/SourceSansPro_Regular" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/edit_profile_toggle_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_visibility"
                android:background="?selectableItemBackgroundBorderless" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_8m">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_password_confirm_new_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Konfirmasi Password Baru"
                app:errorTextAppearance="@style/TextInputErrorTextAppearance"
                app:passwordToggleEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/edit_password_confirm_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/password_default_padding"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/default_font_size_18m"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    style="@style/SourceSansPro_Regular" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/edit_profile_toggle_confirm_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_visibility"
                android:background="?selectableItemBackgroundBorderless" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
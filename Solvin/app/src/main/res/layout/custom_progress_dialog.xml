<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding_20m"
    android:orientation="horizontal">

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:layout_width="@dimen/progress_dialog_circle_default_radius"
        android:layout_height="@dimen/progress_dialog_circle_default_radius"
        android:indeterminate="true"
        app:cpb_color="@color/colorPrimary"
        app:cpb_rotation_speed="2.0"
        app:cpb_stroke_width="@dimen/cpb_stroke_width"/>

    <TextView
        android:id="@+id/custom_progress_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/default_margin_20m"
        android:textColor="@color/colorSubHeaderDarker"
        android:textSize="@dimen/default_font_size_14m"
        style="@style/SourceSansPro_Regular" />

</LinearLayout>
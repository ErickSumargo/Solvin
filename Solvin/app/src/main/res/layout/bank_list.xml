<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bank_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_margin_12m"
    android:padding="@dimen/default_padding_8m"
    android:clickable="true"
    android:background="@drawable/custom_background_pressed">

    <RadioGroup
        android:id="@+id/bank_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/default_padding_4m"
        android:paddingBottom="@dimen/default_padding_4m">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/bank_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="false"
                android:drawablePadding="@dimen/default_padding_8m"
                android:drawableRight="@drawable/ic_bca"
                app:buttonTint="@color/colorPrimary" />

            <RelativeLayout
                android:id="@+id/bank_account_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bank_radio"
                android:layout_marginLeft="@dimen/default_margin_8m">

                <TextView
                    android:id="@+id/bank_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/default_font_size_14m"
                    style="@style/SourceSansPro_Regular" />

                <TextView
                    android:id="@+id/bank_account_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/bank_account_name"
                    android:layout_marginTop="@dimen/default_margin_4m"
                    android:gravity="right"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/default_font_size_16m"
                    style="@style/SourceSansPro_Regular" />

            </RelativeLayout>

        </RelativeLayout>

    </RadioGroup>

</RelativeLayout>
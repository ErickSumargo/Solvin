<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/default_padding_16m"
    android:paddingTop="@dimen/default_padding_16m"
    android:paddingRight="@dimen/default_padding_16m"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rater_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Solvin!"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_font_size_20m"
        style="@style/SourceSansPro_Regular" />

    <TextView
        android:id="@+id/rater_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_20m"
        android:text="Bila anda menyukai aplikasi ini, mohon waktu anda sebentar untuk memberikan penilaiannya"
        android:textColor="@color/colorHeader"
        style="@style/SourceSansPro_Regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_12m"
        android:layout_marginTop="@dimen/default_margin_12m"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rater_dialog_drop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin_8m"
            android:background="@drawable/custom_button_dialog_pressed"
            android:gravity="center_horizontal"
            android:minWidth="@dimen/button_dialog_default_min_width"
            android:padding="@dimen/default_padding_8m"
            android:text="Jangan Tampilkan Lagi"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_font_size_14m"
            style="@style/SourceSansPro_Regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rater_dialog_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/default_margin_8m"
                android:background="@drawable/custom_button_dialog_pressed"
                android:gravity="center_horizontal"
                android:minWidth="@dimen/button_dialog_default_min_width"
                android:padding="@dimen/default_padding_8m"
                android:text="Tutup"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/default_font_size_14m"
                style="@style/SourceSansPro_Regular" />

            <TextView
                android:id="@+id/rater_dialog_rate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_dialog_pressed"
                android:gravity="center_horizontal"
                android:minWidth="@dimen/button_dialog_default_min_width"
                android:padding="@dimen/default_padding_8m"
                android:text="Nilai"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/default_font_size_14m"
                style="@style/SourceSansPro_Regular" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
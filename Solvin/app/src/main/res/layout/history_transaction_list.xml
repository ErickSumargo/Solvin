                        <!--android:layout_weight="1"-->
                        <!--android:text="Lama Aktivasi"-->
                        <!--android:textColor="@color/colorHeader"-->
                        <!--android:textSize="@dimen/default_font_size_16m"-->
                        <!--style="@style/SourceSansPro_Regular" />-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="@dimen/default_margin_8m"-->
                        <!--android:text=":"-->
                        <!--android:textColor="@color/colorHeader"-->
                        <!--android:textSize="@dimen/default_font_size_16m"-->
                        <!--style="@style/SourceSansPro_Regular" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/history_transaction_package_valid_until"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:textColor="@color/colorHeader"-->
                        <!--android:textSize="@dimen/default_font_size_16m"-->
                        <!--android:maxLines="1"-->
                        <!--style="@style/SourceSansPro_Regular" />-->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_4m"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/default_font_size_16m"
                        style="@style/SourceSansPro_Regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/default_margin_8m"
                        android:text=":"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/default_font_size_16m"
                        style="@style/SourceSansPro_Regular" />

                    <TextView
                        android:id="@+id/history_transaction_transaction_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/default_padding_4m"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_font_size_16m"
                        android:maxLines="1"
                        style="@style/SourceSansPro_Regular" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
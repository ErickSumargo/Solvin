<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/expandable_list_view_divider_default_height"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/faq_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_padding_24m"
        android:paddingTop="@dimen/default_padding_12m"
        android:paddingRight="@dimen/default_padding_24m"
        android:paddingBottom="@dimen/default_padding_12m"
        style="@style/InfoTextAppearance" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/expandable_list_view_divider_default_height"
        android:background="@color/colorPrimary" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_padding_16m"
        android:paddingTop="@dimen/default_padding_16m"
        android:paddingRight="@dimen/default_padding_16m">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Penujuan Komentar"
            android:textAlignment="center"
            android:textColor="@color/colorHeader"
            android:textSize="@dimen/default_font_size_22m"
            style="@style/SourceSansPro_Regular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_12m"
            android:text="Pilih subjek yang dapat menerima notifikasi komentar dari anda:"
            android:textColor="@color/colorHeader"
            android:textSize="@dimen/default_font_size_16m"
            style="@style/SourceSansPro_Regular" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/role_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_8m" />

        <LinearLayout
            android:id="@+id/comment_target_note_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_16m"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NB: "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/default_font_size_14m" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifikasi masuknya komentar tidak akan diterima siapapun bila tidak ada subjek yang terpilih"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/default_font_size_14m"
                style="@style/SourceSansPro_Regular" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
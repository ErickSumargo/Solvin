<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/balance_info_detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="@dimen/card_default_elevation"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:contentPadding="@dimen/default_padding_12m">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pokok Saldo"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/default_font_size_16m"
                    style="@style/SourceSansPro_Regular" />

                <TextView
                    android:id="@+id/balance_info_detail_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_8m"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/default_font_size_32m"
                    style="@style/SourceSansPro_Light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_16m"
                    android:text="Bonus Saldo"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/default_font_size_16m"
                    style="@style/SourceSansPro_Regular" />

                <TextView
                    android:id="@+id/balance_info_detail_balance_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_8m"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/default_font_size_32m"
                    style="@style/SourceSansPro_Light" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/divider_default_width"
                android:layout_height="match_parent"
                android:background="@color/darkGray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/default_margin_8m"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rentang Tanggal"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/default_font_size_16m"
                        style="@style/SourceSansPro_Regular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_8m"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/balance_info_detail_date_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/default_font_size_16m"
                            android:maxLines="1"
                            style="@style/SourceSansPro_Regular" />

                        <TextView
                            android:id="@+id/balance_info_detail_date_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_margin_4m"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/default_font_size_16m"
                            android:maxLines="1"
                            style="@style/SourceSansPro_Regular" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_default_height"
                    android:layout_marginTop="@dimen/default_margin_8m"
                    android:background="@color/darkGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_8m"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Vote Terbaik"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/default_font_size_16m"
                        style="@style/SourceSansPro_Regular" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_8m"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/balance_info_detail_best_solution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorHeader"
                            android:textSize="@dimen/default_font_size_24m"
                            android:maxLines="1"
                            style="@style/SourceSansPro_Regular" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/balance_info_detail_extra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/default_font_size_24m"
                                style="@style/SourceSansPro_Regular" />

                            <TextView
                                android:id="@+id/balance_info_detail_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorCancel"
                                android:textSize="@dimen/default_font_size_24m"
                                style="@style/SourceSansPro_Regular" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/balance_bonus_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="false"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/card_default_elevation"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPadding="@dimen/padding_16rs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/balance_bonus_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/text_size_32rs"
                    style="@style/SourceSansPro_Regular" />

                <TextView
                    android:id="@+id/balance_bonus_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/text_size_16rs"
                    style="@style/SourceSansPro_Regular" />

                <TextView
                    android:id="@+id/balance_bonus_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorHeader"
                    android:textSize="@dimen/text_size_16rs"
                    style="@style/SourceSansPro_Regular" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/divider_default_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_12rs"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12rs"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/balance_bonus_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_28rs"
                        style="@style/SourceSansPro_Regular" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_default_height"
                    android:layout_marginTop="@dimen/margin_12rs"
                    android:background="@color/semiLightGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12rs"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Solusi Terbaik"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/text_size_16rs"
                        style="@style/SourceSansPro_Regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_8rs"
                        android:text=":"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/text_size_16rs"
                        style="@style/SourceSansPro_Regular" />

                    <TextView
                        android:id="@+id/balance_bonus_best"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/text_size_16rs"
                        android:maxLines="1"
                        style="@style/SourceSansPro_Regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4rs"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bonus/Solusi"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/text_size_16rs"
                        style="@style/SourceSansPro_Regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_8rs"
                        android:text=":"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/text_size_16rs"
                        style="@style/SourceSansPro_Regular" />

                    <TextView
                        android:id="@+id/balance_bonus_deal_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorHeader"
                        android:textSize="@dimen/text_size_16rs"
                        android:maxLines="1"
                        style="@style/SourceSansPro_Regular" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_16rs">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Informasi Transaksi"
            android:textColor="@color/colorHeader"
            android:textSize="@dimen/text_size_22rs"
            style="@style/SourceSansPro_Regular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16rs"
            android:text="No. Transaksi"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_14rs"
            style="@style/SourceSansPro_Regular" />

        <TextView
            android:id="@+id/transaction_confirm_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4rs"
            android:textColor="@color/colorHeader"
            android:textSize="@dimen/text_size_18rs"
            android:maxLines="1"
            style="@style/SourceSansPro_Regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_default_height"
            android:layout_marginTop="@dimen/margin_2rs"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16rs"
            android:text="A/N Rekening"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_14rs"
            style="@style/SourceSansPro_Regular" />

        <TextView
            android:id="@+id/transaction_confirm_bank_account_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4rs"
            android:textColor="@color/colorHeader"
            android:textSize="@dimen/text_size_18rs"
            android:maxLines="1"
            style="@style/SourceSansPro_Regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_default_height"
            android:layout_marginTop="@dimen/margin_2rs"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16rs"
            android:text="Rekening Bank"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_14rs"
            style="@style/SourceSansPro_Regular" />

        <TextView
            android:id="@+id/transaction_confirm_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4rs"
            android:textColor="@color/colorHeader"
            android:textSize="@dimen/text_size_18rs"
            android:maxLines="1"
            style="@style/SourceSansPro_Regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_default_height"
            android:layout_marginTop="@dimen/margin_2rs"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16rs"
            android:text="Bukti Struk Transfer"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_14rs"
            style="@style/SourceSansPro_Regular" />

        <RelativeLayout
            android:id="@+id/transaction_confirm_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8rs">

            <ImageView
                android:id="@+id/transaction_confirm_image"
                android:layout_width="@dimen/struct_attached_default_width"
                android:layout_height="@dimen/struct_attached_default_height"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/transaction_confirm_image_foreground"
                android:layout_width="@dimen/struct_attached_default_width"
                android:layout_height="@dimen/struct_attached_default_height"
                android:clickable="true"
                android:background="?attr/selectableItemBackground" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>